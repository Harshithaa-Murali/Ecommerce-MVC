@model IEnumerable<Ecommerce_MVC.Models.Login>

@{
    ViewData["Title"] = "Index";
}


<div>
    <ul style="list-style-type: none;margin: 0;padding: 0;overflow: hidden;background-color:cadetblue;">
        <li style="float:left"><a style="display: block;color: white;text-align: center;padding: 14px 16px;text-decoration: none;" class="active" asp-controller="Product" asp-action="Index" asp>Products</a></li>
        <li style="float:left"><a style="display: block;color: white;text-align: center;padding: 14px 16px;text-decoration: none;" asp-controller="Order" asp-action="Index">Orders</a></li>
        <li style="float:left"><a style="display: block;color: white;text-align: center;padding: 14px 16px;text-decoration: none;" asp-controller="Customer" asp-action="Index">Customers</a></li>
    </ul>


    <hr />
</div>
<h1>Customers</h1>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Username)
            </th>
            <th>
                Customer Name
            </th>
            <th>
                Customer Email
            </th>
            <th>
                Customer Phone No
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Username)
                </td>

                <td>
                    @Html.DisplayFor(modelItem => item.Cname)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PhoneNo)
                </td>
                <td>
                </td>
            </tr>
        }
    </tbody>
</table>
