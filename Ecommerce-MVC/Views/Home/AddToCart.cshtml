<div style="background-color:mintcream;padding-left:30px;padding-right:30px;padding-top:30px;padding-bottom:30px">
    @{
        @model List<Product>
        <h5>@ViewBag.message</h5>
        @foreach (var item in Model)
        {
            <div>
                <table>
                    <tr>
                        <td><img src="@item.Imglink" height="150px" width="150px" /></td>
                        <td>
                    <tr><td>Product Id: @item.Pid</td></tr>
                    <tr><td>Product Name: @item.ScType</td></tr>
                    <tr><td>Price: Rs.@item.Price</td></tr>
                    <tr><td>Size: @item.Size</td></tr>
                    </td>
                    </tr>
                </table>
            </div>
            <hr />
            <button><a style="color:black;text-decoration:none" asp-controller="Home" asp-action="DisplayList">Back to home page</a></button>
            <br />
            <br />

            <div>
                <button><a style="color:black;text-decoration:none" asp-route-disc="@ViewBag.disc" asp-action="MyCart">View Cart </a></button>
            </div>
        }
    }
</div>