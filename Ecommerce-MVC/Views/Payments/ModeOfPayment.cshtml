@model Ecommerce_MVC.Models.Order

@{
    ViewData["Title"] = "ModeOfPayment";
}
<div style="background-color:#8ec5b9;padding-left:30px;padding-right:30px;padding-top:30px;padding-bottom:30px">
    <h3>Checkout</h3>

    <hr />
    <div class="row">
        <div class="col-md-4">
            <form style="font-size:large" name="MOPf" asp-action="ModeOfPayment">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label class="control-label">Name</label>
                    <input type="text" required class="form-control" />
                </div>
                <div class="form-group">
                    <label class="control-label">Phone Number</label>
                    <input maxlength="10" minlength="10" type="tel" required class="form-control" />
                </div>
                <div class="form-group">
                    <label class="control-label">Shipping Address</label>
                    <textarea style="height:150px" required class="form-control"></textarea>
                </div>

                <div class="form-group">
                    <label class="control-label">Billing Address</label>
                    <textarea style="height:150px" required class="form-control"></textarea>
                </div><br />
                <div class="form-group">
                    <label class="control-label">Mode Of payment</label><br />
                    <div>
                        <p onclick="upinone()">
                            @Html.RadioButton("Ps", true)<span>Cash On Delivery</span>
                        </p>
                        <p onclick="upi()">
                            @Html.RadioButton("Ps", false)<span >UPI (GPay/PhonePay/Paytm)</span>
                            <div id="upi">
                                
                            </div>
                        </p>
                        <p onclick="upinone()">
                            @Html.RadioButton("Ps", true)<span>Card payment on Delivery</span>

                        </p>
                        <p onclick="gv()">
                            @Html.RadioButton("Ps", false)<span>Gift Voucher</span></p>
                        <div id="gv">
                            
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <input type="submit" asp-controller="Order" asp-action="Create" asp-route-oid="@ViewBag.oid" asp-route-pids="@ViewBag.pids" value="Submit" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>
</div>
<script>
    function upi(){
        document.getElementById("gv").innerHTML = ""
        document.getElementById("upi").innerHTML = "<p>Enter UPI ID: <input required/></p>"
    }
    function upinone() {
        document.getElementById("upi").innerHTML = ""
        document.getElementById("gv").innerHTML = ""
    }
    function gv(){
        document.getElementById("upi").innerHTML = ""
        document.getElementById("gv").innerHTML = "<p>Enter Voucher code: <input required /></p>"
    }
</script>

<div>
    <button><a style="text-decoration:none" asp-action="DisplayList">Back to Home Page</a></button>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
