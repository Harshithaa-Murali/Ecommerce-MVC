@model IEnumerable<Ecommerce_MVC.Models.Product>

@{
    ViewData["Title"] = "Index";
}

<div>
    <ul style="list-style-type: none;margin: 0;padding: 0;overflow: hidden;background-color:cadetblue;">
        <li style="float:left"><a asp-controller="Product" asp-action="Index" style="display: block;color: white;text-align: center;padding: 14px 16px;text-decoration: none;" class="active">Products</a></li>
        <li style="float:left"><a style="display: block;color: white;text-align: center;padding: 14px 16px;text-decoration: none;" asp-controller="Order" asp-action="Index">Orders</a></li>
        <li style="float:left"><a style="display: block;color: white;text-align: center;padding: 14px 16px;text-decoration: none;" asp-controller="Customer" asp-action="Index">Customers</a></li>
    </ul>

    <hr />
</div>
<h1>Product Inventory</h1>
<p>
    <a asp-action="Create">Create New</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Category)
            </th>
            <th>
                Sub Category
            </th>
            <th>
                Product Name
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Size)
            </th>
            <th>
                In Stock
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Price)
            </th>
            <th>
                Brand ID
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Category)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.SubCategory)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ScType)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Size)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.InStock)
                </td>
                <td>
                    &#8377;@Html.DisplayFor(modelItem => item.Price)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.BrandId)
                </td> 
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Pid">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.Pid">Details</a> 
                </td>
            </tr>
        }
    </tbody>
</table>
