<!DOCTYPE html>
<html lang="en">
<head>

    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ECommerceMVC</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/layout.css" asp-append-version="true" />

</head>
<body style="margin-bottom:unset">
    <header style="height:10%">
        <div class="mdiv" style="color:black;">
            <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light border-bottom box-shadow mb-3">
                <div class="container-fluid">
                    <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index"><img style="height:40px;width:40px" src="~/images/shopping-bag.png" /></a>
                    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                            aria-expanded="false" aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>
                    </button>
                    <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                        <ul class="navbar-nav flex-grow-1">
                            <li class="nav-item text-dark">
                                <a style="color:black;text-decoration:none" class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="DisplayList">Home</a>
                            </li>
                            @*<li class="nav-item">
                            <a style="color:black;text-decoration:none" class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
                            </li>*@

                            <li style="z-index:99;opacity:100%" class="nav-item dropdown text-dark">
                                <a style="color:black;text-decoration:none" class="dropdown-toggle nav-link dropdown-toggle" data-toggle="dropdown" aria-expanded="false" href="#">Products </a>
                                <div class="dropdown-content">
                                    <a style="color:black;text-decoration:none" asp-controller="Home" asp-action="Index">Deals</a>
                                    <a style="color:black;text-decoration:none" asp-controller="Home" asp-action="DisplayList">All Products</a>

                                </div>
                            </li>

                        </ul>
                    </div>
                </div>
                <partial name="Logout" />
            </nav>
        </div>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>


    <div style="position:relative;width:100%;bottom:0;">
        <footer class="footer-distributed">

            <div class="footer-left">

                <h4>E-Shop  </h4>

                <p class="footer-links">
                    <a href="#" class="link-1">Home</a>
                    <a href="#">About</a>
                </p>

                <p class="footer-company-name">E-Shop © 2023</p>
            </div>

            <div class="footer-center">

                <div>
                    <i class="fa fa-map-marker"></i>
                    <p><span>123, A Block</span> Valencia Park, Chennai</p>
                </div>

                <div>
                    <i class="fa fa-phone"></i>
                    <p>044-2594581</p>
                </div>

                <div>
                    <i class="fa fa-envelope"></i>
                    <p><a href="mailto:support@company.com">eshop@gmail.com</a></p>
                </div>

            </div>

            <div class="footer-right">

                <p class="footer-company-about">
                    <span>About the company</span>
                    An online store created with love. Local and International brands available with exciting offers and discounts
                </p>

                <div class="footer-icons">

                    <a href="#"><i class="fa fa-facebook"></i></a>
                    <a href="#"><i class="fa fa-twitter"></i></a>
                    <a href="#"><i class="fa fa-linkedin"></i></a>
                </div>

            </div>

        </footer>
    </div>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>

    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
